{
    "name": "mehdihp.dev",
    "version": "0.0.0",
    "description": "Mehdi Hoseini's personal site",
    "main": "index.js",
    "scripts": {
        "preserve": "touch src/assets/styles/tailwind.css",
        "serve": "npm-run-all -l --parallel serve:html serve:css",
        "serve:html": "eleventy --serve",
        "serve:css": "windicss 'public/**/*.html' -o src/assets/styles/tailwind.css -f windi.config.js -t",
        "build": "npm-run-all build:html build:css",
        "build:html": "eleventy build",
        "build:css": "windicss public/**/*.html -o src/assets/styles/tailwind.css -f windi.config.js -t -m"
    },
    "nodemonConfig": {
        "delay": "2500"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/Mehdi-Hp/mehdihp.dev.git"
    },
    "author": "Mehdi Hoseini Pajooh",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Mehdi-Hp/mehdihp.dev/issues"
    },
    "homepage": "https://github.com/Mehdi-Hp/mehdihp.dev#readme",
    "dependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-img": "^0.8.3",
        "@tailwindcss/typography": "^0.4.0",
        "axios": "^0.21.1",
        "date-fns": "^2.21.1",
        "eleventy-plugin-markdown-shortcode": "^1.1.0",
        "html-minifier": "^4.0.0",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "windicss": "^2.5.14"
    },
    "devDependencies": {
        "eslint": "^7.25.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-plugin-import": "^2.22.1"
    }
}
